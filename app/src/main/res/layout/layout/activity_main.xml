<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/h_layout">

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:layout_width="70dp"
            android:id="@+id/h_order"
            android:layout_height="100px"
            android:text="@string/fa_orders"
            android:layout_marginLeft="14dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/h_portfolio"
            android:layout_width="70dp"
            android:layout_height="100px"
            android:text="@string/fa_portfolio"
            android:background="@android:color/transparent"
            android:layout_marginLeft="2dp"/>


        <Button
            android:id="@+id/h_home"
            android:layout_width="70dp"
            android:layout_height="100px"
            android:text="@string/fa_home"
            android:background="@android:color/transparent"
            android:layout_marginLeft="2dp"/>


        <Button
            android:id="@+id/h_accounts"
            android:layout_width="70dp"
            android:layout_height="100px"
            android:text="@string/fa_account"
            android:background="@android:color/transparent"
            android:layout_marginLeft="2dp"/>


        <Button
            android:id="@+id/h_settings"
            android:layout_width="70dp"
            android:layout_height="100px"
            android:text="@string/fa_settings"
            android:background="@android:color/transparent"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>





</LinearLayout>