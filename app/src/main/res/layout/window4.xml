<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layoutVerifyAadhar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Upload documents - Aadhar Card"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
        <ImageView
            android:id="@+id/imageViewAadhar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/instabg"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorLightBlue"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            android:text="Note: Please upload both sides of aadhar card"
            android:gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">
            <EditText
                android:id="@+id/edAadharNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="Enter Aadhar Number"
                android:inputType="phone"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</RelativeLayout>