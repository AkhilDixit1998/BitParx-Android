<?xml version="1.0" encoding="utf-8"?>




<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_btcMarket"
            android:background="@android:color/transparent"
            android:text="BTC Market"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/arrowBtc"
                android:src="@drawable/uparrow"
                android:layout_marginTop="30dp"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/home_ethMarket"
                    android:background="@android:color/transparent"
                    android:text="ETH Market"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/arrowEth"
                    android:visibility="gone"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/uparrow"
                    android:layout_marginTop="30dp"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/home_fragment"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/info">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/dollar"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="BITCOIN"
                android:textSize="16dp"
                android:paddingTop="4dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="4%"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="80dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:text="1.2 BTC"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="RS. 45000"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buySellList"
       >


    </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="150dp"
        android:id="@+id/popUp"

        android:visibility="gone"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="15dp"
        android:background="#95a5a6"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/dollar" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/popUp_buyButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="74dp"
                android:text="BUY" />

            <Button
                android:layout_width="100dp"
                android:id="@+id/popUp_sellButton"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="43dp"
                android:text="Sell" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/popUp_sell"
                android:visibility="gone">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="22dp"
                    android:text="Quantity" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="132dp"
                    />
                <TextView
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="22dp"
                    android:text="Amount" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="132dp"
                    />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="58dp"
                    android:layout_marginEnd="17dp"
                    android:text="Place order" />
            </RelativeLayout>





            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"

                android:id="@+id/popUp_buy">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="21dp"
                        android:text="Quantity" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                      android:layout_marginLeft="132dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                       android:layout_marginTop="40dp"
                        android:layout_marginLeft="22dp"
                        android:text="Amount" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                       android:layout_marginTop="35dp"
                        android:layout_marginLeft="132dp"
                       />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                       android:layout_marginTop="85dp"
                        android:layout_marginLeft="30dp"
                        android:text="Price" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="85dp"
                        android:layout_marginLeft="80dp"
                        android:text="0.00078 BTC"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginLeft="24dp"
                        android:text="Automatic Selling"/>

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginLeft="28dp"
                        android:text="Profit %" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginLeft="132dp"
                        />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="190dp"
                        android:layout_marginLeft="28dp"
                        android:text="Loss %" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="190dp"
                        android:layout_marginLeft="132dp"
                        />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="230dp"
                        android:layout_marginLeft="240dp"
                        android:text="BUY"/>

                </RelativeLayout>




            </ScrollView>

        </RelativeLayout>

    </LinearLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/popUpClose"
            android:layout_marginLeft="280dp"
            android:background="@drawable/close"/>
    </FrameLayout>


</FrameLayout>